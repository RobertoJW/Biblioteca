<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:Iconos="clr-namespace:Biblioteca.Iconos"
             xmlns:local="clr-namespace:Biblioteca.Vistas"
             x:Class="Biblioteca.Vistas.LoginClaveVista"
             x:DataType="local:LoginClaveVista"
             x:Name="This">

    <VerticalStackLayout Spacing="10">
        <Border x:Name="BorderClave" Style="{StaticResource BorderModLogin}">
            <VerticalStackLayout Spacing="2">
                <Label Text="{Binding LabelText, Source={x:Reference This}}" Style="{StaticResource Label1}"/>
                <Grid ColumnDefinitions="Auto, *, Auto" VerticalOptions="Center">
                    <Image Grid.Column="0" Margin="0,0,5,0">
                        <Image.Source>
                            <FontImageSource
                                FontFamily="Iconos"
                                Glyph="{x:Static Iconos:Iconos.contrasena}"
                                Color="Gray" />
                        </Image.Source>
                    </Image>

                    <Entry
                        x:Name="PasswordEntry"
                        Grid.Column="1"
                        IsPassword="{Binding IsPassword}"
                        Placeholder="{Binding PlaceholderText, Source={x:Reference Name=This}}"
                        Text="{Binding Clave, Source={x:Reference This}, Mode=TwoWay}"
                        TextChanged="OnPasswordEntryTextChanged"
                        Style="{StaticResource EntryMod}"/>

                    <ImageButton
                        x:Name="EyeButton"
                        Grid.Column="2"
                        Clicked="OnEyeIconClicked"
                        Source="{Binding IconoVisible}"
                        Style="{StaticResource ImageButtonMod}"/>
                </Grid>
            </VerticalStackLayout>
        </Border>
        
        <Label
            x:Name="ContraseÃ±aErrorLabel"
            IsVisible="False"
            Style="{StaticResource MensajeErrorContrasena}"/>
    </VerticalStackLayout>
    
</ContentView>